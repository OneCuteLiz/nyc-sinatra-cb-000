<h1>Edit a Landmark: <%= @landmark.name %></h1> 

<form action="/landmarks/<%= @landmark.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">

	<label>Name</label> <input type="text" name="landmark[name]" id="landmark_name" value="<%= @landmark.name %>">

	<br><br>

	<label>Year Completed</label> <input type="text" name="landmark[year_completed]" id="landmark_year_completed" value="<%= @landmark.year_completed %>">

	<input type="submit" id="edit_landmark" value="Edit Landmark">


</form>